<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kalenicz.maciej.androidquiz.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kalenicz.maciej.androidquiz.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is used to share data between Applications?"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/primary_text_light"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioButtonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"/>

            <RadioButton
                android:id="@+id/radioButtonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"/>

            <RadioButton
                android:id="@+id/radioButtonC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"/>

            <RadioButton
                android:id="@+id/radioButtonD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"/>

        </RadioGroup>


        <TextView
            android:id="@+id/question2_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What languages is used to develop Android?"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/primary_text_light"/>

        <CheckBox
            android:id="@+id/checkboxA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/checkboxB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/checkboxC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/checkboxD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/checkboxE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <CheckBox
            android:id="@+id/checkboxF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/question3_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which component is used to run task in the background without graphic UI?"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/primary_text_light"/>
        <EditText
            android:id="@+id/edit_text_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Component name"
            android:inputType="textCapWords"/>


        <TextView
            android:id="@+id/question4_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is mean by ANR?"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/primary_text_light"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radioButtonA4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <RadioButton
            android:id="@+id/radioButtonB4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

        <RadioButton
            android:id="@+id/radioButtonC4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"/>

            <RadioButton
                android:id="@+id/radioButtonD4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:paddingLeft="8dp"
                android:layout_marginLeft="8dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="reset"
            android:text="Reset" />
        <Button
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:id="@+id/check_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Check answers"
            android:onClick="checkAllQuestions"/>


    </LinearLayout>



</LinearLayout>

</ScrollView>